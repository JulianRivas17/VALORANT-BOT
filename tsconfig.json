{
    "compilerOptions": {
      "target": "ES2021",
      "module": "CommonJS",
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "strict": true
    },
    "include": ["src"]
  }
  